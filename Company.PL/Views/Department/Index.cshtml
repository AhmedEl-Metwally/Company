@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}

<h1 class="my-3">All Department</h1>
<br />
<a class="btn btn-primary my-3" asp-controller="Department" asp-action="Create">Create new department</a>

@if (Model.Any())
{
    <table class="table table-striped table-hover mt-2">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(d => d.Code)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.Description)</th>
                <th>@Html.DisplayNameFor(d => d.DateOfCreation)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody class="text-center">
            @foreach (var department in Model)
            {
                <tr>
                    <th>@department.Code</th>
                    <th>@department.Name</th>
                    <th>@department.Description</th>
                    <th>@department.DateOfCreation</th>

                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@department.DeptId">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@department.DeptId">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@department.DeptId">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>

                </tr>
            }
        </tbody>
      
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Department Found </h2>
    </div>
}